# ----------------------------------------
# functions
function cd { 
builtin cd $@
if [ 21 -ge $(ls|wc|awk '{print $1}') ]; then
  ls
fi
}

function gd {
dirs -v
echo -n "select: "
read nd
if [ "$nd" != "" ]; then
  cd +"$nd"
fi
}

function backup {
D=`pwd|sed -r 's/^.*\/(.*?)$/\1/'`
F=${D}_`date +%Y%m%d_%H%M`.tar.gz
if [ -f 'Makefile' ]; then make clean; fi
builtin cd ..
tar zcvf ${F} $D
builtin cd -
echo "saved: ${F}"
}

